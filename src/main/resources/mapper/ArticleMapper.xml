  <select id="selectByArtName" resultMap="BaseResultMap">
    select
        a.id aid,
        a.title,
        a.alias,
        a.author_id,
        a.content,
        a.info,
        a.hits,
        a.modified,
        a.created,
        a.`status`

    from article as a
    where  <choose>
              <when test="byId">
                  a.id = #{artName}
              </when>
              <otherwise>
                  a.alias = #{artName}
              </otherwise>
            </choose>
<!--    <if test="#{byId} == true" >a.id = #{artName}</if>-->
<!--      <if test="#{byId} == false">a.alias = #{artName}</if>-->
  </select>

    <select id="selectArticles" resultMap="BaseResultMap" parameterType="INTEGER">
        select
            a.id aid,
            a.title,
            a.author_id,
            a.info,
            a.hits,
            a.modified,
            a.created,
            a.`status`

        from article as a
        where a.`status` = 'publish'
		ORDER BY created DESC
    </select>

